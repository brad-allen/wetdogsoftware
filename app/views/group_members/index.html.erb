<p id="notice"><%= notice %></p>

<h1>Group Members</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Profile</th>
      <th>Status</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Is admin</th>
      <th>Can post</th>
      <th>Can add events</th>
      <th>Can comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_members.each do |group_member| %>
      <tr>
        <td><%= group_member.group %></td>
        <td><%= group_member.profile %></td>
        <td><%= group_member.status %></td>
        <td><%= group_member.created_by %></td>
        <td><%= group_member.updated_by %></td>
        <td><%= group_member.is_admin %></td>
        <td><%= group_member.can_post %></td>
        <td><%= group_member.can_add_events %></td>
        <td><%= group_member.can_comment %></td>
        <td><%= link_to 'Show', group_member %></td>
        <td><%= link_to 'Edit', edit_group_member_path(group_member) %></td>
        <td><%= link_to 'Destroy', group_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group Member', new_group_member_path %>
