<p id="notice"><%= notice %></p>

<h1>Conversation Invites</h1>

<table>
  <thead>
    <tr>
      <th>Conversation</th>
      <th>Profile</th>
      <th>Invited profile</th>
      <th>Status</th>
      <th>Invited at</th>
      <th>Reinvited at</th>
      <th>Rejected at</th>
      <th>Accepted at</th>
      <th>Approved by</th>
      <th>Approved at</th>      
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversation_invites.each do |conversation_invite| %>
      <tr>
        <td><%= conversation_invite.conversation %></td>
        <td><%= conversation_invite.profile %></td>
        <td><%= conversation_invite.invited_profile %></td>
        <td><%= conversation_invite.status %></td>
        <td><%= conversation_invite.invited_at %></td>
        <td><%= conversation_invite.reinvited_at %></td>
        <td><%= conversation_invite.rejected_at %></td>
        <td><%= conversation_invite.accepted_at %></td>
        <td><%= conversation_invite.approved_by %></td>
        <td><%= conversation_invite.approved_at %></td>
        <td><%= conversation_invite.created_by %></td>
        <td><%= conversation_invite.updated_by %></td>
        <td><%= link_to 'Show', conversation_invite %></td>
        <td><%= link_to 'Edit', edit_conversation_invite_path(conversation_invite) %></td>
        <td><%= link_to 'Destroy', conversation_invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

