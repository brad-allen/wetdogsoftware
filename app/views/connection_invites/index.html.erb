<p id="notice"><%= notice %></p>

<h1>Connection Invites</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Connection profile</th>
      <th>Status</th>
      <th>Invited at</th>
      <th>Reinvited at</th>
      <th>Rejected at</th>
      <th>Accepted at</th>
      <th>Approved by</th>
      <th>Approved at</th>      
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connection_invites.each do |connection_invite| %>
      <tr>
        <td><%= connection_invite.profile %></td>
        <td><%= connection_invite.connection_profile %></td>
        <td><%= connection_invite.status %></td>
        <td><%= connection_invite.invited_at %></td>
        <td><%= connection_invite.reinvited_at %></td>
        <td><%= connection_invite.rejected_at %></td>
        <td><%= connection_invite.accepted_at %></td>
        <td><%= connection_invite.approved_by %></td>
        <td><%= connection_invite.approved_at %></td>
        <td><%= connection_invite.created_by %></td>
        <td><%= connection_invite.updated_by %></td>
        <td><%= link_to 'Show', connection_invite %></td>
        <td><%= link_to 'Edit', edit_connection_invite_path(connection_invite) %></td>
        <td><%= link_to 'Destroy', connection_invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

