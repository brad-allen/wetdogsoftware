<p id="notice"><%= notice %></p>

<h1>Group Invites</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Profile</th>
      <th>Status</th>
      <th>Invited at</th>
      <th>Reinvited at</th>
      <th>Rejected at</th>
      <th>Accepted at</th>
      <th>Approved by</th>
      <th>Approved at</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Is admin</th>
      <th>Can post</th>
      <th>Can add events</th>
      <th>Can comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_invites.each do |group_invite| %>
      <tr>
        <td><%= group_invite.group %></td>
        <td><%= group_invite.profile %></td>
        <td><%= group_invite.status %></td>
        <td><%= group_invite.invited_at %></td>
        <td><%= group_invite.reinvited_at %></td>
        <td><%= group_invite.rejected_at %></td>
        <td><%= group_invite.accepted_at %></td>
        <td><%= group_invite.approved_by %></td>
        <td><%= group_invite.approved_at %></td>
        <td><%= group_invite.created_by %></td>
        <td><%= group_invite.updated_by %></td>
        <td><%= group_invite.is_admin %></td>
        <td><%= group_invite.can_post %></td>
        <td><%= group_invite.can_add_events %></td>
        <td><%= group_invite.can_comment %></td>
        <td><%= link_to 'Show', group_invite %></td>
        <td><%= link_to 'Edit', edit_group_invite_path(group_invite) %></td>
        <td><%= link_to 'Destroy', group_invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

