<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Comment widget</th>
      <th>Content</th>
      <th>Vote score</th>
      <th>Upvote</th>
      <th>Downvote</th>
      <th>Flag count</th>
      <th>Status</th>
      <th>Group visibility</th>
      <th>Connection visibility</th>
      <th>User visibility</th>
      <th>Public visibility</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.profile %></td>
        <td><%= comment.comment_widget %></td>
        <td><%= comment.content %></td>
        <td><%= comment.vote_score %></td>
        <td><%= comment.upvote %></td>
        <td><%= comment.downvote %></td>
        <td><%= comment.flag_count %></td>
        <td><%= comment.status %></td>
        <td><%= comment.group_visibility %></td>
        <td><%= comment.connection_visibility %></td>
        <td><%= comment.users_visibility %></td>
        <td><%= comment.public_visibility %></td>
        <td><%= comment.rating %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
